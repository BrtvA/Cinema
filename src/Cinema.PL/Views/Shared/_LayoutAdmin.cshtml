@using Cinema.PL.Enum;

<!DOCTYPE html>
<html lang="en" data-bs-theme="dark">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body>
    <header class="border-bottom border-1 border-white border-opacity-75">
        <div class="container">
            <nav class="row navbar navbar-expand-lg navbar-light">
                <div class="col">
                    <a href="/home" class="nav-link">
                        <h class="fs-2">Кинотеатр Аврора</h>
                    </a>
                </div>
                <div class="col">
                    <ul class="navbar-nav">
                        @{
                            string firstNavActive = "";
                            string secondNavActive = "";
                            string thirdNavActive = "";
                            switch (ViewBag.PageSelect)
                            {
                                case PageSelectEnum.Schedule:
                                    firstNavActive = "active";
                                    break;
                                case PageSelectEnum.Movie:
                                    secondNavActive = "active";
                                    break;
                                default:
                                    thirdNavActive = "active";
                                    break;
                            }
                        }

                        <li class="nav-item">
                            <a href="/schedule" class="fs-4 nav-link @firstNavActive">Афиша</a>
                        </li>
                        <li class="nav-item">
                            <a href="/movie" class="fs-4 nav-link @secondNavActive">Фильмы</a>
                        </li>
                        <li class="nav-item">
                            <a href="/genre" class="fs-4 nav-link @thirdNavActive">Жанры</a>
                        </li>
                    </ul>
                </div>
                <div class="d-flex col justify-content-end">
                    <a href="/logout" class="btn btn-outline-success">Выход</a>
                </div>
            </nav>
        </div>
    </header>
    @RenderBody()
</body>
</html>


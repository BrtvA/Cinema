@using Cinema.PL.Enum;

@{
    ViewData["Title"] = "Кинотеатр - вход";
}

@{
    Layout = "~/Views/Shared/_LayoutСustomer.cshtml";
}

<main>
    <div class="container d-flex flex-column justify-content-center align-items-center mt-3">
        <section class="d-flex flex-row justify-content-center align-items-center">
            <article class="d-flex flex-column width-500">
                @if (ViewBag.Type == EnterTypeEnum.Login)
                {
                    <form id="loginForm" class="d-flex flex-column">
                        <div class="d-flex flex-row justify-content-center align-items-center">
                            <div class="col d-flex flex-row justify-content-center align-items-center pe-2">
                                <a href="/login" class="btn btn-success flex-fill disabled">Войти</a>
                            </div>
                            <div class="col d-flex flex-row justify-content-center align-items-center ps-2">
                                <a href="/register" class="btn btn-success flex-fill">Регистрация</a>
                            </div>
                        </div>
                        <div class="d-flex flex-column mt-3">
                            <label for="userEmailInput" class="fs-6">Email</label>
                            <input id="userEmailInput" name="email" type="text" class="fs-5 form-control"
                                   maxlength="50" />
                            <label for="userPasswordInput" class="fs-6 mt-3">Пароль</label>
                            <input id="userPasswordInput" name="password" type="password" class="fs-5 form-control"
                                   maxlength="50" />
                        </div>
                        <div class="d-flex flex-row justify-content-center align-items-center mt-3">
                            <button class="btn btn-success flex-fill" type="submit">Войти</button>
                        </div>
                    </form>
                }
                else
                {
                    <form id="registerFrom" class="d-flex flex-column">
                        <div class="d-flex flex-row justify-content-center align-items-center">
                            <div class="col d-flex flex-row justify-content-center align-items-center pe-2">
                                <a href="/login" class="btn btn-success flex-fill">Войти</a>
                            </div>
                            <div class="col d-flex flex-row justify-content-center align-items-center ps-2">
                                <a href="/register" class="btn btn-success flex-fill disabled">Регистрация</a>
                            </div>
                        </div>
                        <div class="d-flex flex-column mt-3">
                            <label for="userEmailInput" class="fs-6">Email</label>
                            <input id="userEmailInput" name="email" type="text" class="fs-5 form-control"
                                   maxlength="50" />
                            <label for="userPasswordInput" class="fs-6 mt-3">Пароль</label>
                            <input id="userPasswordInput" name="password" type="password" class="fs-5 form-control"
                                   maxlength="50" />
                            <label for="userNameInput" class="fs-6 mt-3">Имя</label>
                            <input id="userNameInput" name="name" type="text" class="fs-5 form-control"
                                   maxlength="20" />
                        </div>
                        <div class="d-flex flex-row justify-content-center align-items-center mt-3">
                            <button class="btn btn-success flex-fill" type="submit">Зарегистрироваться</button>
                        </div>
                    </form>
                }
            </article>
        </section>
    </div>
</main>
<script src="~/lib/jquery/dist/jquery-3.7.0.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script type="module" src="~/js/user.js"></script>